<%- include('partials/header') %> 

<h1>Index page</h1>
<div class="row">

<% blogs.forEach(blog => { %>
<div class="card col-sm-6 mb-5 col-md-4 ml-auto mr-auto" style="width: 18rem;">
    <img src="<%= blog.image %>" class="card-img-top mt-2" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= blog.title %></h5>
      <p class="card-text"><%= blog.body.substring(0,30) %>....</p>
      <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read More</a>
      <p class="card-text"><small class="text-muted"><%= blog.created.toDateString() %></small></p>
    </div>
  </div>
<% }); %> 

</div>



<%- include('partials/footer') %> 