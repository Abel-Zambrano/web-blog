<%- include('partials/header') %> 

<div class="container text-center">
    <div class="mt-5">
        <form action="/blogs" method="POST">
            <h1>New Blog</h1>
            <div class="form-group">
            <input type="text" class="form-control" id="exampleFormControlInput1" name="blog[title]" placeholder="title">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="exampleFormControlInput1" name="blog[image]" placeholder="image">
            </div>
            <div class="form-group">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="blog[body]" placeholder="blog post goes here"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Post Blog</button>
        </form>
    </div>
</div>

