<%- include('partials/header') %> 

<div class="container text-center">
    <div class="mt-5">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <h1>Edit "<%= blog.title %>" Blog</h1>
            <div class="form-group">
            <input type="text" class="form-control" id="exampleFormControlInput1" name="blog[title]" value="<%= blog.title %> ">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="exampleFormControlInput1" name="blog[image]" value="<%= blog.image %> ">
            </div>
            <div class="form-group">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="blog[body]"><%= blog.body %> </textarea>
            </div>
            <button type="submit" class="btn btn-warning">Submit Edit</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %> 